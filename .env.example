# Environment Variables for Arbitrage Bot System
# Copy this file to .env and fill in actual values

# ======================
# GENERAL
# ======================
NODE_ENV=development
DOMAIN=localhost

# ======================
# DATABASE
# ======================
DB_PASSWORD=arbitrage_dev_password_2024
DATABASE_URL=postgresql://arbitrage_user:${DB_PASSWORD}@postgres:5432/arbitrage_bot

# ======================
# REDIS
# ======================
REDIS_PASSWORD=redis_dev_password_2024
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ======================
# SECURITY
# ======================
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME_JWT_SECRET_MIN_32_CHARS_REPLACE_THIS_VALUE
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_MIN_32_CHARS_REPLACE_THIS
SESSION_ENCRYPTION_KEY=CHANGE_ME_FERNET_KEY_USE_PYTHON_SCRIPT

# ======================
# PGADMIN
# ======================
PGADMIN_EMAIL=admin@arbitrage.local
PGADMIN_PASSWORD=pgadmin_dev_password_2024

# ======================
# GRAFANA
# ======================
GRAFANA_USER=admin
GRAFANA_PASSWORD=grafana_dev_password_2024

# ======================
# WORKER MANAGER
# ======================
MAX_WORKERS=10
MIN_WORKERS=1

# ======================
# PROXY CONFIGURATION (Development)
# ======================
# For development, can use Cloudflare WARP or no proxy
PROXY_TYPE=none
PROXY_PROVIDER_API_KEY=

# ======================
# ENGINE CONFIGURATION
# ======================
ENGINE_PORT=3000
ENGINE_WS_PORT=3001
ENGINE_URL=http://localhost:3000
ENGINE_WS_URL=ws://localhost:3001/ws

# ======================
# MONITORING
# ======================
SENTRY_DSN=
SLACK_WEBHOOK_URL=

# ======================
# FEATURE FLAGS
# ======================
ENABLE_AUTO_RETRY=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_RATE_LIMITING=true
MAX_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_THRESHOLD=5
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# DEVELOPMENT MODE
# ======================
ENABLE_DEBUG_LOGS=true
PAPER_TRADING_MODE=true
MOCK_SPORTSBOOK=true
